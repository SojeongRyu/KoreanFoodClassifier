<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickedRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/btn_selector"
                android:layout_width="42dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:button="@drawable/scrap_button_on_off"
                android:checked="true"
                android:duplicateParentState="false" />

            <ImageButton
                android:id="@+id/btn_back2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_back2"
                android:layout_marginTop="0dp"
                android:text="Food Name\n"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/foodIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodName"
                android:layout_marginTop="0dp"
                android:text="foodIngredients\n"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/foodPreparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodIngredients"
                android:layout_marginTop="0dp"
                android:text="foodPreparation\n"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/foodCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodPreparation"
                android:text="foodCooking\n"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>