<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutputActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/btn_selector"
                android:layout_width="42dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:button="@drawable/scrap_button_on_off"
                android:duplicateParentState="false" />


            <ImageButton
                android:id="@+id/btn_back2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:onClick="onBackBtnClicked"
                android:padding="0dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/foodImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_below="@id/btn_back2"
                android:padding="0dp"/>

            <ImageView
                android:id="@+id/label_foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodImg"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:src="@drawable/food_name"/>
            <TextView
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_foodName"
                android:layout_marginHorizontal="15dp"
                android:text=""
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/label_foodIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodName"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:src="@drawable/food_ingredients"/>
            <TextView
                android:id="@+id/foodIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_foodIngredients"
                android:layout_marginHorizontal="15dp"
                android:text=""
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/label_foodPreparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodIngredients"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:src="@drawable/food_preparation"/>
            <TextView
                android:id="@+id/foodPreparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_foodPreparation"
                android:layout_marginHorizontal="15dp"
                android:text=""
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/label_foodCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodPreparation"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:src="@drawable/food_cooking"/>
            <TextView
                android:id="@+id/foodCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_foodCooking"
                android:layout_marginHorizontal="15dp"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodCooking"
                android:layout_centerHorizontal="true"
                android:text="exit"/>


        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id = "@+id/dialog_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>